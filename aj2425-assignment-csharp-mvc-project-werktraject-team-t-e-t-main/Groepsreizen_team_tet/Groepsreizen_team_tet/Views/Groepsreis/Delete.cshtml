@model Groepsreizen_team_tet.ViewModels.GroepsreisViewModels.GroepsreisDeleteViewModel
@{
    ViewBag.Title = "Groepsreis verwijderen: " + @Model.BestemmingNaam;
}

<div class="container mt-5">
    <h3>@ViewBag.Title</h3>
    <p>Weet je zeker dat je de groepsreis "@Model.BestemmingNaam" wilt verwijderen?</p>

    <div>
        <h5>Groepsreis</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Bestemming</dt>
            <dd class="col-sm-10">@Model.BestemmingNaam</dd>
            <dt class="col-sm-2">Prijs</dt>
            <dd class="col-sm-10">€ @Model.Prijs</dd>
            <dt class="col-sm-2">Begindatum</dt>
            <dd class="col-sm-10">@Model.Begindatum.ToString("dd-MM-yyyy")</dd>
            <dt class="col-sm-2">Einddatum</dt>
            <dd class="col-sm-10">@Model.Einddatum.ToString("dd-MM-yyyy")</dd>
        </dl>
    </div>

    <!-- Acties -->
    <div >
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2" onclick="return confirm('Weet je zeker dat je deze groepsreis wilt verwijderen?');">
                <i class="fas fa-trash"></i> Verwijderen
            </button>
        </form>
        <a asp-action="Beheer" class="btn btn-secondary">
            <i class="fas fa-times"></i> Annuleren
        </a>
    </div>
</div>
