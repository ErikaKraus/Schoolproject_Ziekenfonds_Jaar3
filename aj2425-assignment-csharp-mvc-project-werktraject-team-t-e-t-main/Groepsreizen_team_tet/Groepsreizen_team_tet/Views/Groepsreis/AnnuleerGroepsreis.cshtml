@model GroepsreisAnnuleerViewModel
@{
    ViewBag.Title = "Groepsreis annuleren: " + Model.Naam;
}

<h3>@ViewBag.Title</h3>
<form asp-action="AnnuleerGroepsreis" asp-controller="Groepsreis" method="post">
    <input type="hidden" name="groepsreisId" value="@Model.Id" />

    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Naam">Groepsreis</label>
        <input asp-for="Naam" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Begindatum">Begindatum</label>
        <input asp-for="Begindatum" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Einddatum">Einddatum</label>
        <input asp-for="Einddatum" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="RedenAnnulatie">Reden voor annulering</label>
        <textarea asp-for="RedenAnnulatie" class="form-control"></textarea>
        <span asp-validation-for="RedenAnnulatie" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">                            
            <i class="fa fa-ban"></i>
Groepsreis annuleren</button>
        <a asp-action="Beheer" class="btn btn-secondary"> <i class="fas fa-times"></i>

Annuleren</a>
    </div>

</form>
