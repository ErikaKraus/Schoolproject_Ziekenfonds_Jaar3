@model Groepsreizen_team_tet.ViewModels.GroepsreisViewModels.GroepsreisMonitorenViewModel
@{
    ViewBag.Title = "Monitorenlijst voor " + Model.BestemmingNaam;
}
<h3>@ViewBag.Title</h3>
<div class="d-flex justify-content-end mb-3">
    <button onclick="window.history.back()" class="btn btn-outline-secondary">Terug</button>
</div>

<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr class="table-info">
                    <th>Naam</th>
                    <th>Leeftijd</th>
                    <th>E-mailadres</th>
                    <th>Telefoonnummer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var monitor in Model.IngeschrevenMonitoren)
                {
                    <tr>
                        <td>@monitor.Naam</td>
                        <td>@monitor.Leeftijd jaar</td>
                        <td>@monitor.Email</td>
                        <td>@monitor.Telefoonnummer</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>