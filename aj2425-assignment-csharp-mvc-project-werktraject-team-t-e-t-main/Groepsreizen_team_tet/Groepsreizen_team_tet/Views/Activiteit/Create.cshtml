@model Groepsreizen_team_tet.ViewModels.ActiviteitViewModels.ActiviteitCreateViewModel

<h3>Maak een nieuwe activiteit aan</h3>


<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Beschrijving" class="control-label"></label>
                <textarea asp-for="Beschrijving" class="form-control" required></textarea>
                <span asp-validation-for="Beschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-darkblue mt-3 me-2">
                    <i class="fas fa-save"></i>
                    Opslaan
                </button>
                <a asp-action="Beheer" class="btn btn-secondary mt-3">
                    <i class="fas fa-times"></i>
                    Annuleren
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}