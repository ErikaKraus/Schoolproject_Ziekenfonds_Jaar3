@model Groepsreizen_team_tet.ViewModels.ActiviteitViewModels.ActiviteitDeleteViewModel
@{
    ViewBag.Title = "Activiteit verwijderen: " + Model.Naam;
}
<h3>@ViewBag.Title</h3>
<p>Weet je zeker dat je de activiteit "@Model.Naam" wilt verwijderen?</p>


<div>
    <h5>Activiteit</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beschrijving)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beschrijving)
        </dd>
        <!-- Voeg hier eventueel meer velden toe die je wilt tonen -->
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger mt-3" onclick="return confirm('Weet je zeker dat je deze activiteit wilt verwijderen?');">
                <i class="fa fa-trash"></i> Verwijderen
            </button>   
            <a asp-action="Beheer" class="btn btn-secondary mt-3">
                <i class="fas fa-times"></i>
                Annuleren
            </a>
        </div>
    </form>
</div>