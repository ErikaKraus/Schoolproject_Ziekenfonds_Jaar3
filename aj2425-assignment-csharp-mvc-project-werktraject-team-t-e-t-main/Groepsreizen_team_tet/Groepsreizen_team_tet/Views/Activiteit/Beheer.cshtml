@model Groepsreizen_team_tet.ViewModels.ActiviteitViewModels.ActiviteitBeheerViewModel

<h2>Activiteitenbeheer</h2>

<!-- Knop om een nieuwe activiteit toe te voegen -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex">
        <a asp-action="Create" class="btn btn-success mb-3">
            <i class="fa fa-plus"></i>
            Nieuwe activiteit aanmaken
        </a>
    </div>
    <div>
        <a asp-action="BackToDashboard" class="btn btn-outline-secondary">Terug</a>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Beschrijving</th>
            <th>Acties</th> <!-- Kolom voor de bewerkingsacties -->
        </tr>
    </thead>
    <tbody>
        @foreach (var activiteit in Model.Activiteiten)
        {
            <tr>
                <td>@activiteit.Naam</td>
                <td>@activiteit.Beschrijving</td>
                <td>
                    <!-- Knoppen voor acties: Wijzigen en Verwijderen -->
                    <a asp-action="Edit" asp-route-id="@activiteit.Id" class="btn btn-warning btn-sm" title="Activiteit bewerken">
                        <i class="fa fa-pencil-alt"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@activiteit.Id" class="btn btn-danger btn-sm" title="Activiteit verwijderen">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


