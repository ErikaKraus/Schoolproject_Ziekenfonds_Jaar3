@model OpleidingBeheerViewModel
@{
    ViewBag.Title = "Opleidingenbeheer";
}

<h2>@ViewBag.Title</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex">
        <a asp-action="Create" class="btn btn-success mb-3">
            <i class="fa fa-plus"></i>
            Nieuwe opleiding aanmaken
        </a>
    </div>
    <a asp-action="BackToDashboard" class="btn btn-outline-secondary">Terug</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Locatie</th>
            <th>Beschrijving</th>
            <th>Vooropleiding</th>
            <th>Begindatum</th>
            <th>Einddatum</th>
            <th>Beschikbare plaatsen</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var opleiding in Model.Opleidingen)
        {
            <tr>
                <td>@opleiding.Naam</td>
                <td>@opleiding.Locatie</td>
                <td>@opleiding.Beschrijving</td>
                <td>@(opleiding.OpleidingVereist != null ? opleiding.OpleidingVereist.Naam : "Geen")</td>
                <td>@opleiding.Begindatum.ToString("dd-MM-yyyy")</td>
                <td>@opleiding.Einddatum.ToString("dd-MM-yyyy")</td>
                <td>@opleiding.BeschikbarePlaatsen/@opleiding.AantalPlaatsen</td>
                <td>
                    <div class="d-flex">
                        <a asp-action="IngeschrevenMonitoren" asp-route-id="@opleiding.Id" class="btn btn-success btn-sm me-1" title="Deelnemers weergeven">
                            <i class="fa fa-user-tie"></i>
                        </a>
                        <a asp-action="DetailVerantwoordelijke" asp-route-id="@opleiding.Id" class="btn btn-info btn-sm me-1" title="Opleidingdetails">
                            <i class="fas fa-search"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@opleiding.Id" class="btn btn-warning btn-sm me-1" title="Opleiding wijzigen">
                            <i class="fa fa-pencil-alt"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@opleiding.Id" class="btn btn-danger btn-sm me-1" title="Opleiding verwijderen">
                            <i class="fa fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
