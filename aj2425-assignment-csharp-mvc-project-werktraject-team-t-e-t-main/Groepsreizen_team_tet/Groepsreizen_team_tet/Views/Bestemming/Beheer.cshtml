@model Groepsreizen_team_tet.ViewModels.BestemmingViewModels.BestemmingBeheerViewModel

<h2>Beheer bestemmingen</h2>

<table class="table">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Code</th>
            <th>Leeftijdscategorie</th>
            <th>Actie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bestemming in Model.Bestemmingen)
        {
            <tr>
                <td>@bestemming.Naam</td>
                <td>@bestemming.Code</td>
                <td>@bestemming.MinLeeftijd - @bestemming.MaxLeeftijd</td>
                <td>
                    <!-- Knoppen voor acties: Wijzigen en Verwijderen -->
                    <a asp-action="Edit" asp-route-id="@bestemming.Id" class="btn btn-warning btn-sm" title="Bestemming bewerken">
                        <i class="fa fa-pencil-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Groepsreis" asp-action="Beheer" class="btn btn-outline-secondary">Terug</a>
</div>