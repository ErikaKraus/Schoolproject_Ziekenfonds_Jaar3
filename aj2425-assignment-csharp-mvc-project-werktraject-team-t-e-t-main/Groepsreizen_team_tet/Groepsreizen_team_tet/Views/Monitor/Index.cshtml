@model IEnumerable<Groepsreizen_team_tet.ViewModels.MonitorViewModels.MonitorViewModel>
<h2>Monitorenbeheer</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex">
        <a asp-action="Create" class="btn btn-success mb-3">
            <i class="fa fa-plus"></i>
            Nieuwe monitor toevoegen
        </a>
    </div>
    <a asp-action="ToDashboard" class="btn btn-outline-secondary mb-3">Terug</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Email</th>
            <th>Is Hoofdmonitor</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var monitor in Model)
        {
            <tr>
                <td>@monitor.Voornaam @monitor.Naam</td>
                <td>@monitor.Email</td>
                <td>@(monitor.IsHoofdMonitor == true ? "Ja" : "Nee")</td>
                <td>
                    <!-- knoppen voor acties Details en Bewerken -->
                    <a asp-action="Detail" asp-route-id="@monitor.Id" class="btn btn-info btn-sm me-1" title="Details">
                        <i class="fas fa-search"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@monitor.Id" class="btn btn-warning btn-sm" title="Monitor wijzigen">
                        <i class="fa fa-pencil-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

