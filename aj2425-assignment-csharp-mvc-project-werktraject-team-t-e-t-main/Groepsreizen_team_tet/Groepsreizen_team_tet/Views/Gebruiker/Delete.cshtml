@model Groepsreizen_team_tet.ViewModels.GebruikerViewModels.DeleteGebruikerViewModel

@{
    ViewData["Title"] = "Gebruiker verwijderen: " + Model.Voornaam + " " + Model.Naam;
}

<h3>@ViewData["Title"]</h3>
<p>Weet je zeker dat je gebruiker "@Model.Voornaam @Model.Naam" wilt verwijderen?</p>



<div>
    <h5>Account</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Voornaam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voornaam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rol)
        </dd>
    </dl>
</div>


<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" onclick="return confirm('Weet je zeker dat je deze gebruiker wilt verwijderen?');">
        <i class="fa fa-trash"></i>
        Verwijderen
    </button>
    <a asp-action="Beheer" class="btn btn-secondary">
        <i class="fas fa-times"></i>
        Annuleren
    </a>
</form>